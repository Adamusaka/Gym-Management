@namespace web_frontend.Components.Layout.Alerts.SuccessAlert

@code
{
    [Parameter]
    public List<string> SuccessMessages { get; set; }
}

@if(SuccessMessages.Count > 0) {
    <div class="success-alert-container">
        <h3 class="success-alert-title">SUCCESS: <span class="success-alert-remove-icon" onclick="document.getElementsByClassName('success-alert-container')[0].style.display = 'none';"><i class="fa fa-times" aria-hidden="true"></i></span></h3>
        @foreach (string validationSuccessMessage in SuccessMessages) {
            <p class="success-alert-message">@validationSuccessMessage</p>
        }
    </div>
}