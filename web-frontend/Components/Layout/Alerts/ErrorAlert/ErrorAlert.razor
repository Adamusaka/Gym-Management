@namespace web_frontend.Components.Layout.Alerts.ErrorAlert

@code
{
    [Parameter]
    public List<string> ErrorMessages { get; set; }
}

@if(ErrorMessages.Count > 0) {
    <div class="error-alert-container">
        <h3 class="error-alert-title">ERROR: <span class="error-alert-remove-icon" onclick="document.getElementsByClassName('error-alert-container')[0].style.display = 'none';"><i class="fa fa-times" aria-hidden="true"></i></span></h3>
        @foreach (string validationErrorMessage in ErrorMessages) {
            <p class="error-alert-message">@validationErrorMessage</p>
        }
    </div>
}